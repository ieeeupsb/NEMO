<?xml version="1.0"?>

<launch>
	<arg name="start_ign" default="true"/>
	<arg name="start_rviz" default="false"/>
	<arg name="world" default="$(dirname)/../data/worlds/factory.world"/>

	<!-- Start Ignition Gazebo -->
	<group if="$(var start_ign)">
		<!-- Start ROS/Ignition Bridge -->
		<node pkg="ros_gz_bridge" name="ros_gz_bridge" exec="parameter_bridge" output="screen" 
		args="/model/nemo/cmd_vel@geometry_msgs/msg/Twist@gz.msgs.Twist /model/nemo/odometry@nav_msgs/msg/Odometry@ignition.msgs.Odometry /camera@sensor_msgs/msg/Image@ignition.msgs.Image" />

		<include file="$(find-pkg-share ros_ign_gazebo)/launch/ign_gazebo.launch.py">
			<arg name="gz_args" value="$(var world)"/>
		</include>
	</group>

	<!-- <node pkg="ros_gz_image" name="ros_gz_image" exec="image_bridge" args="/camera /camera"/> -->

	<!--
    <node pkg="tf2_ros" name="tf2_ros" exec="static_transform_publisher" args="0 0 0 0 0 0 map scan"/>
    -->

	<!-- Start Rviz   -->
	<group if="$(var start_rviz)">
		<node name="rviz" pkg="rviz2" exec="rviz2">
			<param name="use_sim_time" value="false" />
		</node>
	</group>

	<!-- <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim1"/>
    <node pkg="turtlesim" exec="turtlesim_node" name="sim" namespace="turtlesim2"/>
    <node pkg="turtlesim" exec="mimic" name="mimic">
      <remap from="/input/pose" to="/turtlesim1/turtle1/pose"/>
      <remap from="/output/cmd_vel" to="/turtlesim2/turtle1/cmd_vel"/>
    </node> -->
</launch>